{
  "manifest_version": 2,
  "name": "Reaction Packs for Facebook",
  "version": "2.0.0",

  "description": "Choose your own Facebook reaction pictures! View packs at http://www.reactionpacks.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "*://*.facebook.com/*",
    "*://*.reactionpacks.com/*",
    "alarms",
    "storage"
  ],
  "background": {
    "scripts": ["refresh-selector.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.reactionpacks.com/*"],
      "js": ["index.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
