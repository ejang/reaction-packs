{
  "name": "Reaction Packs for Facebook",
  "version": "1.0.0",
  "description": "Change your reaction pictures on Facebook, and share with your friends!",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "*://localhost/*",
    "*://www.facebook.com/*",
    "*://www.reactionpacks.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://www.facebook.com/*",
        "*://www.reactionpacks.com/*"
      ],
      "js": [
        "index.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
